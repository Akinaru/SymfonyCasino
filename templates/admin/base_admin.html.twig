{% extends 'base_front.html.twig' %}

{% block title %}Backoffice Â· Dashboard{% endblock %}

{% block page_content %}

    {# Route courante #}
    {% set current = app.request.attributes.get('_route') %}

    {# Nav admin (fond noir) #}
    <nav class="nav nav-underline mb-3 pb-2 border-bottom border-secondary" role="navigation">
        <a
            class="nav-link {{ current == 'app_dashboard' ? 'active fw-semibold link-light' : 'link-secondary' }}"
            aria-current="{{ current == 'app_dashboard' ? 'page' : null }}"
            href="{{ path('app_dashboard') }}"
        >
            Dashboard
        </a>

        <a
            class="nav-link {{ current starts with 'app_admin_utilisateur' ? 'active fw-semibold link-light' : 'link-secondary' }}"
            aria-current="{{ current starts with 'app_admin_utilisateur' ? 'page' : null }}"
            href="{{ path('app_admin_utilisateur_index') }}"
        >
            Utilisateurs
        </a>

        <a
            class="nav-link {{ current starts with 'app_admin_games' ? 'active fw-semibold link-light' : 'link-secondary' }}"
            aria-current="{{ current starts with 'app_admin_games' ? 'page' : null }}"
            href="{{ path('app_admin_games_index') }}"
        >
            Jeux
        </a>

        <a
            class="nav-link {{ current starts with 'app_admin_market' ? 'active fw-semibold link-light' : 'link-secondary' }}"
            aria-current="{{ current starts with 'app_admin_market' ? 'page' : null }}"
            href="{{ path('app_admin_market_index') }}"
        >
            Items
        </a>
    </nav>

    {% block admin_content %}{% endblock %}

{% endblock %}
