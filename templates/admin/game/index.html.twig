{# templates/admin/game/index.html.twig #}
{% extends 'admin/base_admin.html.twig' %}

{% block title %}Symfsino - Games{% endblock %}

{% block admin_content %}
    <div class="card bg-dark border-secondary">
        <div class="card-header border-secondary d-flex justify-content-between align-items-center">
            <h1 class="h5 mb-0 text-light">Games</h1>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-dark table-hover table-striped align-middle mb-0">
                    <thead class="table-secondary text-dark">
                    <tr>
                        <th>Key</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Min bet</th>
                        <th>Max bet</th>
                        <th class="text-end">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for game in games %}
                        <tr>
                            <td><code>{{ game.key }}</code></td>
                            <td>{{ game.name }}</td>
                            <td>{{ game.description ?? '—' }}</td>
                            <td>{{ game.minBet ?? '—' }}</td>
                            <td>{{ game.maxBet ?? '—' }}</td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-outline-light"
                                   >
                                    Parties
                                </a>
                                <a class="btn btn-sm btn-outline-info"
                                   >
                                    Transactions
                                </a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No games registered.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
