{% extends 'admin/base_admin.html.twig' %}
{% block title %}Admin — Éditer item #{{ item.id }}{% endblock %}
{% block admin_content %}
    <div class="card bg-dark border-secondary">
        <div class="card-header border-secondary"><h1 class="h5 mb-0 text-light">Éditer #{{ item.id }}</h1></div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row g-3">
                <div class="col-md-4">{{ form_row(form.type) }}</div>
                <div class="col-md-4">{{ form_row(form.name) }}</div>
                <div class="col-md-4">{{ form_row(form.price) }}</div>
            </div>
            <div class="mt-3 d-flex gap-2">
                <button class="btn btn-primary">Enregistrer</button>
                <a href="{{ path('app_admin_market_index') }}" class="btn btn-outline-light">Retour</a>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
