{% set baseAttr = { 'data-turbo': 'false' } %}
{% set formOptions = (form_id is defined)
    ? { attr: baseAttr|merge({ id: form_id }) }
    : { attr: baseAttr }
%}

{{ form_start(form, formOptions) }}
    {{ form_row(form.email) }}
    {{ form_row(form.pseudo) }}
    {{ form_rest(form) }}
{{ form_end(form, { render_rest: false }) }}
