{% extends 'admin/base_admin.html.twig' %}

{% block title %}Symfsino - Utilisateur ({{ utilisateur.pseudo ?? '—' }}){% endblock %}

{% block admin_content %}

    <div class="d-flex justify-content-end">
        <a href="{{ path('app_admin_utilisateur_index') }}" class="btn btn-outline-light me-2">Retour</a>
        <a href="{{ path('app_admin_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-warning">Éditer</a>
    </div>

    <h1 class="mb-3 text-white">{{ app.user.pseudo }}</h1>

    {# Avatar carré depuis mc-heads.net, basé sur le pseudo #}
    {% if utilisateur.pseudo %}
        <div class="mb-4">
            <img
                src="{{ utilisateur.avatarUrl }}"
                alt="Avatar de {{ utilisateur.pseudo }}"
                width="128" height="128"
                class="img-thumbnail border-secondary"
                style="object-fit: cover;"
            >
        </div>
    {% endif %}

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ utilisateur.id }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ utilisateur.email }}</td>
        </tr>
        <tr>
            <th>Pseudo</th>
            <td>{{ utilisateur.pseudo ?? '—' }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
        </tr>
        </tbody>
    </table>


    {{ include('admin/utilisateur/_delete_form.html.twig') }}
{% endblock %}
