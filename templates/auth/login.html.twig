{% extends 'auth/base_auth.html.twig' %}

{% block title %}ðŸŽ° Symfsino - Connexion{% endblock %}

{% block content %}
    <div class="texte-gris">
            <h1>Se connecter</h1>

            <form method="post" action="{{ path('app_login') }}" novalidate="novalidate" data-turbo="false">
                {% if error %}
                    <div class="alert alert-danger mb-3">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                <div class="mb-3">
                    <label for="email" class="required">Adresse e-mail</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required="required"
                        autocomplete="email"
                        class="form-control"
                        value="{{ last_username|default('') }}"
                    >
                </div>

                <div class="mb-3">
                    <label for="password" class="required">Mot de passe</label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        required="required"
                        class="form-control"
                        autocomplete="current-password"
                    >
                </div>

                <div class="mb-3 form-check">
                    <input class="form-check-input" type="checkbox" id="_remember_me" name="_remember_me" checked>
                    <label class="form-check-label" for="_remember_me">Rester connecte</label>
                </div>

                <button class="btn btn-primary w-100">Se connecter</button>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            </form>

            <p class="mt-3">
                Pas de compte ?
                <a href="{{ path('app_register') }}">Creer un compte</a>
            </p>
        </div>
{% endblock %}
