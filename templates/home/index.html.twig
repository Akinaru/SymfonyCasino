{% extends 'base_front.html.twig' %}

{% block title %}Symfsino - Accueil{% endblock %}

{% block page_content %}
    <main class="py-4">

        {# ——— HERO ——— #}
        <section class="py-5 mb-4 text-white rounded-3">
            <div class="container-fluid py-4">
                <h1 class="display-5 fw-bold">🎰 Symfsino</h1>
                <p class="col-lg-8 fs-5">
                    Bienvenue dans la salle de jeux. Slots, tirages & jackpots — simple, rapide, 100% fun.
                </p>
                <div class="d-flex flex-wrap gap-2 mt-3">
                    <a href="#" class="btn btn-success btn-lg">Lancer une partie</a>
                    {% if app.user %}
                        <a href="{{ path('app_profile') }}" class="btn btn-outline-light btn-lg">Mon profil</a>
                    {% else %}
                        <a href="{{ path('app_register') }}" class="btn btn-warning btn-lg">Créer un compte</a>
                        <a href="{{ path('app_login') }}" class="btn btn-outline-light btn-lg">Se connecter</a>
                    {% endif %}
                </div>
            </div>
        </section>

        {# ——— JEUX (cards) ——— #}
        <section class="mb-4">
            <style>
                /* Uniformise la hauteur des cartes et des visuels */
                .game-card { display: flex; flex-direction: column; height: 100%; }
                .game-card-img { height: 180px; object-fit: cover; }
                .game-card-body { display: flex; flex-direction: column; }
                .game-card-actions { margin-top: auto; display: flex; gap: .5rem; align-items: center; }
            </style>

            <div class="d-flex align-items-center justify-content-between mb-2">
                <h2 class="h4 mb-0">Jeux disponibles</h2>
                <a href="#" class="btn btn-outline-secondary btn-sm">Tout voir</a>
            </div>

            <div class="row g-3">
                {% for game in games %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <a href="{{ game.url }}" class="text-decoration-none text-reset d-block h-100">
                            <div class="card shadow-sm game-card h-100">
                                <img
                                    src="{{ game.imageUrl }}"
                                    class="card-img-top game-card-img"
                                    alt="{{ game.name }}"
                                    loading="lazy"
                                >
                                <div class="card-body game-card-body">
                                    <h5 class="card-title mb-1">{{ game.name }}</h5>
                                    <p class="card-text mb-0">{{ game.description }}</p>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </section>

        {# ——— COMPTE ——— #}
        {% if app.user %}
            <section class="mb-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex align-items-center justify-content-between">
                            <strong>Mon compte</strong>
                            <a class="btn btn-light btn-sm" href="{{ path('app_profile') }}">Gérer</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-12 col-md-6">
                                <dl class="row mb-0">
                                    <dt class="col-sm-4">Identifiant</dt>
                                    <dd class="col-sm-8">{{ app.user.id }}</dd>

                                    <dt class="col-sm-4">Email</dt>
                                    <dd class="col-sm-8">{{ app.user.email }}</dd>

                                    <dt class="col-sm-4">Pseudo</dt>
                                    <dd class="col-sm-8">{{ app.user.pseudo ?? '—' }}</dd>

                                    <dt class="col-sm-4">Rôles</dt>
                                    <dd class="col-sm-8">
                                        {% set roles = app.user.roles|default([]) %}
                                        {{ roles is iterable ? roles|join(', ') : roles }}
                                    </dd>
                                </dl>
                            </div>
                            <div class="col-12 col-md-6">
                                <div class="p-3 bg-light rounded">
                                    <div class="d-flex align-items-center justify-content-between mb-2">
                                        <div><strong>Balance</strong></div>
                                        <span class="badge bg-warning text-dark">🪙 {{ app.user.balance ?? '0' }}</span>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <a href="#" class="btn btn-success w-100">Déposer</a>
                                        <a href="#" class="btn btn-outline-danger w-100">Retirer</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        {% endif %}




        {# ——— TABLEAU + LISTE ——— #}
        <section class="row g-3 mb-4">
            <div class="col-12 col-lg-7">
                <div class="card shadow-sm h-100">
                    <div class="card-header">
                        <strong>🏆 Top joueurs</strong>
                    </div>
                    <div class="table-responsive">
                        <table class="table mb-0 align-middle">
                            <thead>
                            <tr>
                                <th scope="col" class="text-nowrap">#</th>
                                <th scope="col">Pseudo</th>
                                <th scope="col">Gains</th>
                                <th scope="col">Parties</th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <th scope="row">1</th>
                                <td>Bl0ckMaster</td>
                                <td>🪙 12 450</td>
                                <td>342</td>
                            </tr>
                            <tr>
                                <th scope="row">2</th>
                                <td>RedStone</td>
                                <td>🪙 9 980</td>
                                <td>287</td>
                            </tr>
                            <tr>
                                <th scope="row">3</th>
                                <td>PickaxePro</td>
                                <td>🪙 8 210</td>
                                <td>198</td>
                            </tr>
                            <tr>
                                <th scope="row">4</th>
                                <td>Cubik</td>
                                <td>🪙 6 540</td>
                                <td>154</td>
                            </tr>
                            <tr>
                                <th scope="row">5</th>
                                <td>NethR</td>
                                <td>🪙 5 320</td>
                                <td>129</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-12 col-lg-5">
                <div class="card shadow-sm h-100">
                    <div class="card-header">
                        <strong>🎉 Derniers gains</strong>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            PickaxePro
                            <span class="badge bg-success rounded-pill">+ 🪙 420</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            RedStone
                            <span class="badge bg-success rounded-pill">+ 🪙 310</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Bl0ckMaster
                            <span class="badge bg-warning text-dark rounded-pill">Jackpot 🪙 2 000</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Cubik
                            <span class="badge bg-success rounded-pill">+ 🪙 150</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            NethR
                            <span class="badge bg-danger rounded-pill">— 🪙 90</span>
                        </li>
                    </ul>
                    <div class="card-body">
                        <a href="#" class="btn btn-outline-primary w-100">Voir l’historique</a>
                    </div>
                </div>
            </div>
        </section>

        {# ——— CTA ——— #}
        <section class="mb-5">
            <div class="p-4 p-md-5 bg-light rounded-3 border">
                <div class="d-flex flex-column flex-md-row align-items-md-center justify-content-between gap-3">
                    <div>
                        <h3 class="mb-1">Prêt à tenter ta chance ?</h3>
                        <p class="mb-0 text-muted">Rejoins les parties en cours et vise le jackpot du jour.</p>
                    </div>
                    <a href="#" class="btn btn-success btn-lg">Jouer maintenant</a>
                </div>
            </div>
        </section>

    </main>
{% endblock %}
