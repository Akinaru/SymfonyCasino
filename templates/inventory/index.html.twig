{% extends 'base_front.html.twig' %}
{% block title %}Inventaire{% endblock %}

{% block page_content %}
    <div class="card bg-dark border-secondary">
        <div class="card-header border-secondary d-flex justify-content-between align-items-center">
            <h1 class="h5 mb-0 text-light">Inventaire</h1>
            <small class="text-white-50">Balance : {{ app.user.balance }}</small>
        </div>
        <div class="card-body">
            <div class="row g-3">
                {% for it in items %}
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="border rounded h-100 p-3 d-flex gap-3 align-items-center">
                            <img src="{{ asset(it.imagePath) }}" alt="" style="width:48px;height:48px; image-rendering: pixelated;">
                            <div class="flex-grow-1">
                                <div class="text-white fw-semibold">{{ it.name }}</div>
                                <div class="text-white-50 small">{{ it.typeLabel }}</div>
                                <div class="mt-1"><span class="badge text-bg-info">Achet√©</span></div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-12 text-center text-white-50">Inventaire vide.</div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
