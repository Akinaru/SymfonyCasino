{% extends 'base_front.html.twig' %}
{% block title %}Marche noir{% endblock %}

{% block page_content %}
    <style>
        .market-header {
            border-bottom: 1px solid rgba(255, 255, 255, .06);
        }

        .market-item {
            background-color: rgba(0, 0, 0, 0.55);
            border: 1px solid rgba(255, 255, 255, 0.06);
            border-radius: 0.9rem;
            transition:
                transform .15s ease,
                box-shadow .15s ease,
                border-color .15s ease,
                background-color .15s ease;
        }

        .market-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 0.75rem 1.5rem rgba(0, 0, 0, .85);
            border-color: rgba(255, 255, 255, 0.18);
            background-color: rgba(0, 0, 0, 0.75);
        }

        .market-item-img {
            width: 100%;
            aspect-ratio: 1 / 1;
            border-radius: 0.75rem;
            object-fit: cover;
            image-rendering: pixelated;
        }

        .market-item-title {
            font-size: 0.9rem;
            font-weight: 600;
            letter-spacing: .04em;
            text-transform: uppercase;
        }

        .market-item-type {
            font-size: 0.8rem;
        }

        .market-price-label {
            font-size: 0.7rem;
            text-transform: uppercase;
            letter-spacing: .09em;
        }

        .market-buy-btn {
            min-width: 110px;
            white-space: nowrap;
        }
    </style>

    <div class="mb-4 market-header d-flex justify-content-between align-items-center pb-3 mt-3">
        <h1 class="h4 text-light mb-0">Marche noir</h1>
        {% if app.user %}
            <div class="d-flex align-items-center gap-2 text-white-50 small">
                <span>Votre balance</span>
                <span class="balance">
                    {{ app.user.balance }}
                </span>
            </div>
        {% else %}
            <span class="text-white-50 small">Connectez-vous pour acheter</span>
        {% endif %}
    </div>

    {% if items is empty %}
        <div class="text-center text-white-50 py-5">
            Rien en vente pour lâ€™instant.
        </div>
    {% else %}
        <div class="row row-cols-2 row-cols-sm-3 row-cols-lg-4 g-3">
            {% for it in items %}
                <div class="col">
                    <div class="market-item h-100 d-flex flex-column p-3">
                        <img
                            src="{{ asset(it.imagePath) }}"
                            alt="{{ it.name }}"
                            class="market-item-img mb-3"
                        >

                        <div class="market-item-title text-light mb-1">
                            {{ it.name }}
                        </div>
                        <div class="market-item-type text-white-50 mb-3">
                            {{ it.typeLabel }}
                        </div>

                        <div class="mt-auto d-flex justify-content-between align-items-end">
                            <div>
                                <div class="market-price-label text-white-50 mb-1">
                                    Prix
                                </div>
                                <div class="fw-semibold text-white balance">
                                    {{ it.price }}
                                </div>
                            </div>

                            <div>
                                {% if app.user %}
                                    <form
                                        method="post"
                                        action="{{ path('app_market_buy', {id: it.id}) }}"
                                        class="mb-0"
                                    >
                                        <input type="hidden" name="_token" value="{{ csrf_token('buy_item_' ~ it.id) }}">
                                        <button
                                            class="btn btn-sm btn-primary market-buy-btn"
                                            {% if app.user.balance < it.price %}disabled{% endif %}
                                        >
                                            Acheter
                                        </button>
                                    </form>
                                {% else %}
                                    <span class="text-white-50 small">
                                        Connectez-vous
                                    </span>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
