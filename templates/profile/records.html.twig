{% extends 'profile/base_profil.html.twig' %}

{% block title %} Symfsino 路 Records{% endblock %}

{% block profile_content %}
    <div class="py-4 text-white text-white-scope">

        <h1 class="h4 mb-4">Mes meilleurs gains</h1>


        {# ===================== SLOTS ===================== #}
        <div class="card bg-dark border-secondary mb-4">
            <div class="card-header border-secondary d-flex justify-content-between align-items-center">
                <span class="text-white">Slots 路 Meilleur gain</span>

                {% if recordSlots %}
                    <small class="text-white-50">
                        #{{ recordSlots.partie.id }} 路
                        {{ recordSlots.partie.finLe ? recordSlots.partie.finLe|date('d/m/Y H:i') : '' }}
                    </small>
                {% else %}
                    <small class="text-white-50">Aucun gain pour le moment</small>
                {% endif %}
            </div>

            {% if recordSlots %}
                {% set record = recordSlots %}
                {% include 'profile/records/_slots_block.html.twig' with { record: record } %}
            {% else %}
                <div class="card-body text-white-50">
                    Joue quelques parties de Slots pour voir apparaitre ton meilleur gain ici.
                </div>
            {% endif %}
        </div>



        {# ===================== DICE ===================== #}
        <div class="card bg-dark border-secondary mb-4">
            <div class="card-header border-secondary d-flex justify-content-between align-items-center">
                <span class="text-white">Dice 路 Meilleur gain</span>

                {% if recordDice %}
                    <small class="text-white-50">
                        #{{ recordDice.partie.id }} 路
                        {{ recordDice.partie.finLe ? recordDice.partie.finLe|date('d/m/Y H:i') : '' }}
                    </small>
                {% else %}
                    <small class="text-white-50">Aucun gain pour le moment</small>
                {% endif %}
            </div>

            {% if recordDice %}
                <div class="card-body">

                    <div class="d-flex flex-wrap align-items-center gap-3">
                    <span class="badge text-bg-success">
                        +{{ recordDice.partie.gain|number_format(0, ',', ' ') }}
                    </span>

                        <span class="text-white-50 small">
                        Mise {{ recordDice.partie.mise|number_format(0, ',', ' ') }}
                    </span>
                    </div>

                    {# On affiche juste le numero tir茅 + un rendu simple #}
                    {% set meta = recordDice %}
                    {% if meta.grid is defined %}
                    {% else %}
                        <div class="text-white-50">Aucun detail disponible.</div>
                    {% endif %}

                </div>
            {% else %}
                <div class="card-body text-white-50">
                    Joue quelques parties de Dice pour voir apparaitre ton meilleur gain ici.
                </div>
            {% endif %}
        </div>


    </div>
{% endblock %}
